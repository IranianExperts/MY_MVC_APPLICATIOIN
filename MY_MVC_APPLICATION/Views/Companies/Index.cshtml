@model IEnumerable<Models.Company>

@{
	string strTitle = "Companies List";

	ViewBag.Title = strTitle;
}

<h2>
	@strTitle
</h2>

<div class="row">
	<div class="col-xs-12">
		@Html.ActionLink("Create New Company", MVC.Companies.Create())
	</div>
</div>

<div class="row">
	<div class="col-xs-12 table-responsive">
		<table class="table table-bordered table-condensed table-striped table-hover">
			<tr>
				<th></th>
				<th>
					@Html.DisplayNameFor(model => model.IsActive)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
			</tr>

			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.ActionLink("Details", MVC.Companies.Details(item.Id))
						|
						@Html.ActionLink("Edit", MVC.Companies.Edit(item.Id))
						|
						@Html.ActionLink("Delete", MVC.Companies.Delete(item.Id))
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.IsActive)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
				</tr>
			}

		</table>
	</div>
</div>
