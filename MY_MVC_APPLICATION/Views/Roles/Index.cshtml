@model IEnumerable<Models.Role>

@{
	string strTitle = "Roles List";

	ViewBag.Title = strTitle;
}

<h2>
	@strTitle
</h2>

<div class="row">
	<div class="col-xs-12">
		@Html.ActionLink("Create New Role", MVC.Roles.Create())
	</div>
</div>

<div class="row">
	<div class="col-xs-12 table-responsive">
		<table class="table table-bordered table-condensed table-striped table-hover">
			<tr>
				<th></th>
				<th>
					@*فعال*@
					@*Active*@
					@Html.DisplayNameFor(model => model.IsActive)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
			</tr>

			@foreach (var item in Model)
			{
				<tr>
					<td>
						@*@Html.ActionLink("Details", "Details", new { id = item.Id }) |
						@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
						@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@

						@Html.ActionLink("Details", MVC.Roles.Details(item.Id))
						|
						@Html.ActionLink("Edit", MVC.Roles.Edit(item.Id))
						|
						@Html.ActionLink("Delete", MVC.Roles.Delete(item.Id))
					</td>
					<td>
						@*@item.IsActive*@
						@Html.DisplayFor(modelItem => item.IsActive)
					</td>
					<td>
						@*@item.Name*@
						@Html.DisplayFor(modelItem => item.Name)
					</td>
				</tr>
			}

		</table>
	</div>
</div>
